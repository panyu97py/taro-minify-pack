{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./dist/",
    "skipLibCheck": true,
    /* Skip type checking of declaration files. */
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "types": ["@types/node"],
    "paths": {
      "@/*": ["src/*"],
    }
  },
  "include": ["src"],

}
